{
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "prebuild": "mkdir -p public/assets && rsync -a --delete assets/ public/assets/",
    "build": "vite build",
    "preview": "vite preview",
    "visual:baseline": "env BASE_URL=https://osvaldojeronymo.github.io/silic-request-service/ npx playwright test e2e/visual.spec.ts --update-snapshots",
    "visual:compare": "env BASE_URL=http://localhost:5173/silic-request-service/ npx playwright test e2e/visual.spec.ts",
    "format": "prettier --write \"**/*.{js,ts,css,scss,md,html,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,css,scss,md,html,json}\"",
    "lint": "eslint .",
    "typecheck": "tsc -p .tsconfig.json --noEmit",
    "test": "vitest run tests --reporter=dot",
    "test:ui": "vitest",
    "e2e": "BASE_URL=http://localhost:8000 playwright test",
    "e2e:headless": "BASE_URL=http://localhost:8000 playwright test --reporter=line",
    "verify": "npm run format:check && npm run lint && npm run typecheck && npm run test && npm run e2e:headless",
    "prepare": "husky",
    "dev": "vite"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,scss,md,html,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
