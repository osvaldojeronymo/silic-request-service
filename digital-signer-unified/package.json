{
  "name": "silic-digital-signer-unified",
  "version": "3.0.0",
  "description": "SILIC Digital Signer Unified - Portal unificado de Assinatura Digital com TypeScript e Vite",
  "type": "module",
  "main": "dist/index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "lint": "npm run lint:ts && npm run lint:css && npm run lint:html",
    "lint:ts": "eslint src/**/*.ts --fix",
    "lint:css": "stylelint src/**/*.{css,scss} --fix",
    "lint:html": "html-validate dist/*.html",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "format": "prettier --write src/**/*.{ts,css,scss,html}",
    "analyze": "npm run build && npx vite-bundle-analyzer",
    "lighthouse": "lighthouse http://localhost:4173 --output html --output-path ./reports/lighthouse-report.html"
  },
  "keywords": [
    "digital-signature",
    "document-signing",
    "accessibility",
    "responsive",
    "pwa",
    "typescript",
    "vite",
    "caixa",
    "silic"
  ],
  "author": "CAIXA - SILIC 2.0 Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/osvaldojeronymo/silic.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-legacy": "^4.1.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "html-validate": "^8.5.0",
    "lighthouse": "^11.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "sass": "^1.69.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "^5.2.0",
    "vite": "^4.5.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.16.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}